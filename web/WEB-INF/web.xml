<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>Init</servlet-name>
        <servlet-class>it.bologna.ausl.babelmanager.services.Init</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Init</servlet-name>
        <url-pattern>/Init</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateBabel</servlet-name>
        <servlet-class>it.bologna.ausl.babelmanager.services.UpdateBabel</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBabel</servlet-name>
        <url-pattern>/UpdateBabel</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateBabelList</servlet-name>
        <servlet-class>it.bologna.ausl.babelmanager.services.UpdateBabelList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBabelList</servlet-name>
        <url-pattern>/UpdateBabelList</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetAttivita</servlet-name>
        <servlet-class>it.bologna.ausl.babelmanager.services.GetAttivita</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAttivita</servlet-name>
        <url-pattern>/GetAttivita</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateBabelMulti</servlet-name>
        <servlet-class>it.bologna.ausl.babelmanager.services.UpdateBabelMulti</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBabelMulti</servlet-name>
        <url-pattern>/UpdateBabelMulti</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/SVdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <context-param>
        <param-name>AuthenticationTable</param-name>
        <param-value>bds_tools.authorized_applications</param-value>
    </context-param>
    <context-param>
        <param-name>pendingActivityTableName</param-name>
        <param-value>babel.attivita</param-value>
    </context-param>
    <context-param>
        <param-name>doneActivityTableName</param-name>
        <param-value>babel.attivita_fatte</param-value>
    </context-param>
    <context-param>
        <param-name>activitiesSetTableName</param-name>
        <param-value>babel.set_attivita</param-value>
    </context-param>
    <context-param>
        <param-name>ParametersTableName</param-name>
        <param-value>bds_tools.parametri_pubblici</param-value>
    </context-param>
    <context-param>
        <param-name>usersTableName</param-name>
        <param-value>procton.utenti</param-value>
    </context-param>
    <context-param>
        <param-name>appid</param-name>
        <param-value>bds_tools</param-value>
    </context-param>
    <context-param>
        <param-name>apptoken</param-name>
        <param-value>bds_tools</param-value>
    </context-param>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
